#include <iostream>

using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0), cout.tie(0);

    int N;
    cin >> N;
    
    int* T = new int[N];
    int* P = new int[N];
    int* dp = new int[N+1];

    for (int i = 0; i < N; i++)
    {
        cin >> T[i] >> P[i];
    }

    memset(dp, 0, (N+1) * sizeof(int));

    for (int i = N - 1; i >= 0; i--)
    {
        if (i + T[i] <= N)
        {
            dp[i] = max(dp[i + T[i]] + P[i], dp[i+1]);
        }
        else
        {
            dp[i] = dp[i+1];
        }
    }

    cout << dp[0];
}
